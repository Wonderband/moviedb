{{!-- {{#each this}} --}}
<a class='modal__link' href='#'  data-id='{{this.id}}'>
  <img
    class='modal__poster'
    src='{{this.poster}}'
    alt='{{this.title}}'
    loading='lazy'
  />
</a>
<h3 class='modal__title'>{{this.title}}</h3>
<div class='modal__meta'>
  <ul class='meta-list'>
    <li class='meta-item'><span>Vote/Votes</span><span
      >{{this.vote_average}}/{{this.vote_count}}</span></li>
    <li class='meta-item'><span>Popularity</span>{{this.popularity}}<span
      ></span></li>
    <li class='meta-item'>
      <span>Original Title</span>{{this.original_title}}<span></span>
    </li>
    <li class='meta-item'><span>Genre</span><span>{{this.genres}}</span></li>
  </ul>
  <p>ABOUT</p>
  <p>{{this.about}}</p>
</div>
{{!-- {{/each}} --}}