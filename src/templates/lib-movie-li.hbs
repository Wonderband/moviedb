{{#each this}}
<li class='gallery-item' data-id='{{this.id}}'>
    <a class='movie__link' href='#'>
        <img class='movie__poster' src='https://image.tmdb.org/t/p/w500/{{this.poster_path}}' alt='Movie poster'
            loading='lazy' />
        <h2 class='movie__title'>{{this.title}}</h2>
        <p class='movie__info'>{{#each this.genres}}{{this.name}} {{/each}}| {{this.release_date}}</p>
    </a>
</li>
{{/each}}